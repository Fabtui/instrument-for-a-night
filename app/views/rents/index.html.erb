<div class="calendar-container">
<%= month_calendar(events: @all_rents) do |date, all_rents| %>
  <%= date %>

  <% all_rents.each do |rent| %>
  <% if @rents.include?(rent) %>
    <div class="calendar-rented">
      <%= link_to rent_path(rent.id) do %>
        <%= rent.instrument.brand %> <%= rent.instrument.name %>
      <% end %>
    </div>
  <% else %>
      <div class="calendar-loaned">
      <%= link_to rent_path(rent.id) do %>
        <%= rent.instrument.brand %> <%= rent.instrument.name %>
      <% end %>
    </div>
  <% end %>
  <% end %>
<% end %>
</div>
